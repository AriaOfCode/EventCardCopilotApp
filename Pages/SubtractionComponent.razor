</button>
<span title="number of free places" class="small-number">@result</span>
<!-- h3>Risultato della Sottrazione</h3>
<p>@Number1 - @Number2 = @result</p -->


<Modal IsVisible="@isModalListVisible" IsVisibleChanged="@((value) => isModalListVisible = value)">
 
    <table>
        <tr>
          <td>
        
                       Members
        
            </td>
        </tr>
        @foreach(var user in Users){
          <tr>
            <td>
                  <div class="chip">
                          <img src="@user.ImageUrl" alt="Person" width="96" height="96">
                          @user.Username
                  </div>
              </td>
          </tr>
        }
      </table>
 
</Modal> 


