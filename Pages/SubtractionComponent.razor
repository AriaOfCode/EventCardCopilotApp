@using EventCardCopilotApp.Models

@code {
    [Parameter]
    public int Number1 { get; set; }

    [Parameter]
    public int Number2 { get; set; }

    [Parameter]
    public List<User> Users { get; set; }


    private int result;

    protected override void OnParametersSet()
    {
        // Calcola la sottrazione quando i parametri vengono impostati
        result = Number1 - Number2;
    }

    private bool isModalListVisible = false;

    private async Task ShowMemberList()
    {
        isModalListVisible = true;
        await Task.Delay(3000); // Attendi 3 secondi
        /// isModalListVisible = false;
    }
    protected override Task OnInitializedAsync()
    {

        return base.OnInitializedAsync();
    }

}
<button title="Clicca qui per inviare il modulo" style="width: 20%;background-color: #d65db2;" @onclick="ShowMemberList">
